<div id="todo-item-{{todo.id}}">
  {{todo.title}}
  <button
    class="w-10 bg-blue-500"
    hx-trigger="click"
    hx-target="#modal"
    hx-swap="outerHTML"
    hx-get="/todos/{{todo.id}}/edit"
  >Edit</button>

  <button
    class="w-10 bg-blue-red"
    hx-trigger="click"
    hx-target="#todo-item-{{todo.id}}"
    hx-swap="delete"
    hx-delete="/todos/{{todo.id}}"
  >Delete</button>
</div>